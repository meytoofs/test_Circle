{% extends 'base.html.twig' %}

{% block title %}Hello MyLevelController!{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="bounce">Super Simplon Bros</h1>
    <h2>Bienvenue sur mon projet chef d'oeuvre</h2>
    <div class="chatbot">
        <a href="#" class="talk">Activate Voice</a>
        <p class="voice2text"></p>
    </div>
    <div class="gameDisplay">
        <canvas id="screen" width="640" height="500">
        </canvas>
    </div>
    <div class="controller">
        <div class="base">
            <div class="front">
                <div class="decoration">
                    <div class="stickers">
                        <div class="st-a">A</div>
                        <div class="st-b">B</div>
                        <div class="st-select">SELECT</div>
                        <div class="st-start">START</div>
                    </div>
                    <div class="decoration-central">
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                    
                </div>
                <div class="cross">
                    <div class="circle"></div>
                    <div class="horizontal">
                        <div class="arrowlf"></div>
                        <div class="arrowrh"></div>
                    </div>
                    <div class="vertical">
                        <div class="arrowlf"></div>
                        <div class="arrowrh"></div>
                    </div>
                    <div class="back-cross">
                        <div class="horiz"></div>
                        <div class="vert"></div>
                    </div>
                </div>
                <div class="buttons-a-b">
                    <div class="btn-border"><div class="btn-round a"></div></div>
                    <div class="btn-border"><div class="btn-round b"></div></div>
                </div>
                <div class="buttons-select">
                    <div class="btn-central select"></div>
                    <div class="btn-central start"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="js/chatbot.js"></script>
<script type="module" src="/js/main.js"></script>
{% endblock %}
